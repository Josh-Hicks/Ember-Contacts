<form {{action 'save' on="submit"}}>
  {{input placeholder="First Name" class="form-control" value=model.firstName}}
  <br>
  <br>
  {{input placeholder="Last Name" class="form-control" value=model.lastName}}
  <br>
  <br>
  {{input placeholder="Email" class="form-control" value=model.email}}
  <br>
  <br>
  <button class="btn btn-default pull-right" {{action 'cancel'}}>Cancel</button>
  <button class="btn btn-success pull-right btn-margin">Save</button>
</form>